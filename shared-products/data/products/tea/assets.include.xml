                  <StorageAmount>2</StorageAmount>
                </Item>
              </FactoryOutputs>
              <CycleTime>90</CycleTime>
              <IsMainFactory>1</IsMainFactory>
            </FactoryBase>
            <Maintenance>
              <Maintenances>
                <Item>
                  <Product>1010117</Product>
                  <Amount>190</Amount>
                </Item>
              </Maintenances>
            </Maintenance>
